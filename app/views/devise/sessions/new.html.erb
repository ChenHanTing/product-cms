<div class="container">
  <div class="row">
    <div class="col-4"><span></span></div>
    <div class="col-4"><span>
      <h1><%= t('.sign_in') %></h1>

      <form class="new_user" id="new_user" action="/users/sign_in" accept-charset="UTF-8" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div class="form-group">
          <label for="user_login">Username or email</label>
          <input type="text" class="form-control" name="user[login]" id="user_login">
        </div>

        <div class="form-group">
          <label for="user_password">Password</label>
          <input autocomplete="current-password" class="form-control" type="password" name="user[password]" id="user_password">
        </div>

        <div class="form-group form-check">
          <input name="user[remember_me]" type="hidden" value="0"><input class="form-check-input" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
          <label class="form-check-label" for="user_remember_me">
            Remember me
          </label>
        </div>

        <div class="form-group">
          <input type="submit" name="commit" value="Log in" class="btn btn-primary" data-disable-with="Log in">
        </div>
      </form>

      <%= render 'devise/shared/links' %>
    </span></div>
  <div class="col-4"><span></span></div>
</div>
